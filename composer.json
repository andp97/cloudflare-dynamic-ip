{
    "name": "adnp97/cloudflare-dynamic-ip",
    "description": "Cloudflare DDNS script for Raspberry Pi 4 or RHEL/Debian/Ubuntu",
    "license": "none",
    "require": {
        "php": "^7.3|^8.0",
        "cloudflare/sdk": "^1.2",
        "vlucas/phpdotenv": "^5.3",
        "guzzlehttp/guzzle": "^7.0.1"
    },
    "autoload": {
        "psr-4": {"App\\": "src/"}
    },
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "test": [
            "./cf-ip"
        ]
    }
}
